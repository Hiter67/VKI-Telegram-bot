<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true" >
	<!--
		  internalLogFile="c:\temp\console-example-internal.log"
		  internalLogLevel="Info" >
	  -->

	<!-- the targets to write to -->
	<targets>
		<!--
			Данная цель сохраняет лог в файл вида logs\2018-04-20.log
			вид сообщения: 2018-04-20 12:27:05.9121 DEBUG debug message
		-->
		<target xsi:type="File" name="logfile" fileName="${basedir}/data/logs/${shortdate}.log"
						 layout="${longdate} ${uppercase:${level}} ${message}" />
		<target xsi:type="Console" name="logconsole"
				layout="${longdate} ${uppercase:${level}} ${message}" />
		<!-- ${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring} -->
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--
			<logger name="*" minlevel="Debug" writeTo="filedata" />
		-->
		<logger name="*" minlevel="Debug" writeTo="logfile,logconsole" />
	</rules>
</nlog>